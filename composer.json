{
  "name"       : "thru.io/active_record",
  "description": "An active-record like implementation",
  "authors"    : [
    {
      "name" : "Matthew Baggett",
      "email": "matthew@baggett.me"
    }
  ],
  "require"    : {
    "gone.io/uuid": ">=2.0",
    "thru.io/json-pretty-printer": "1.0.*"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.7",
    "codeclimate/php-test-reporter": "dev-master",
    "fzaninotto/faker": "1.5.*@dev",
    "raveren/kint": "dev-master",
    "monolog/monolog": ">=1.6.0",
    "johnkary/phpunit-speedtrap": "~1.0@dev",
    "lstrojny/phpunit-clever-and-smart": "0.*",
    "fiunchinho/phpunit-randomizer": "dev-master",
    "squizlabs/php_codesniffer": "*",
    "doctrine/cache": "~1.4"
  },
  "suggest": {
    "doctrine/cache": "For caching, we need Doctrine/Cache"
  },
  "autoload"   : {
    "psr-4": {
      "Thru\\ActiveRecord\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Thru\\ActiveRecord\\Test\\": "tests/"
    }
  },
  "bin": [
    "ar_benchmark"
  ]
}
